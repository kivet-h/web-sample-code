{
  "name": "umi-web-sample-code",
  "description": "基于umi搭建的一个web项目",
  "private": true,
  "version": "0.0.1",
  "license": "ISC",
  "scripts": {
    "start": "cross-env PORT=8000 umi dev",
    "start:dev": "cross-env PORT=8001 UMI_ENV=dev umi dev",
    "start:prod": "cross-env PORT=8002 UMI_ENV=prod umi dev",
    "start:no-mock": "cross-env PORT=8003 MOCK=none umi dev",
    "build": "cross-env UMI_ENV=dev umi build",
    "build:prod": "cross-env UMI_ENV=prod umi build",
    "serve": "serve ./dist",
    "commit": "rm -rf .git/hooks/pre-commit && git add . && git-cz",
    "lint:js": "eslint --cache --ext .js,.jsx,.ts,.tsx --format=pretty ./src",
    "lint:fix:js": "eslint --fix --cache --ext .js,.jsx,.ts,.tsx --format=pretty ./src",
    "postinstall": "umi generate tmp",
    "prettier": "prettier --write '**/*.{js,jsx,tsx,ts,less,md,json}'",
    "test": "umi-test",
    "test:coverage": "umi-test --coverage"
  },
  "gitHooks": {
    "pre-commit": "lint-staged"
  },
  "lint-staged": {
    "*.{js,jsx,less,md,json}": [
      "prettier --write"
    ],
    "*.ts?(x)": [
      "prettier --parser=typescript --write"
    ]
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-customizable"
    }
  },
  "dependencies": {
    "@ant-design/pro-layout": "^6.32.5",
    "dayjs": "^1.10.7",
    "react": "17.x",
    "react-dom": "17.x",
    "umi": "^3.5.20"
  },
  "devDependencies": {
    "@types/lodash": "^4.14.178",
    "@types/react": "^17.0.0",
    "@types/react-dom": "^17.0.0",
    "@umijs/fabric": "^2.10.1",
    "@umijs/preset-react": "1.x",
    "@umijs/test": "^3.5.20",
    "commitizen": "^4.2.4",
    "cross-env": "^7.0.3",
    "cz-customizable": "^6.3.0",
    "lodash": "^4.17.21",
    "mockjs": "^1.1.0",
    "prettier": "^2.2.0",
    "serve": "^13.0.2",
    "typescript": "^4.1.2",
    "yorkie": "^2.0.0"
  }
}
